
<zk>
    <listener>
        <description>Session init (setup objects in session)</description>
        <listener-class>au.org.emii.portal.web.SessionInitImpl</listener-class>
    </listener>

    <listener>
        <description>Hibernate thread session context management</description>
        <listener-class>org.zkoss.zkplus.hibernate.HibernateSessionContextListener</listener-class>
    </listener>

    <library-property>
        <name>org.zkoss.zul.Button.mold</name>
        <value>bs</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zul.Menupopup.mold</name>
        <value>bs</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zul.Paging.mold</name>
        <value>bs</value>
    </library-property>
    <library-property>
        <name>org.zkoss.zul.Panel.mold</name>
        <value>bs</value>
    </library-property>

    <session-config>
        <!--  session timeout in seconds -->
        <session-timeout>7200</session-timeout>
        <timer-keep-alive>true</timer-keep-alive>
    </session-config>

    <library-property>
        <name>org.zkoss.zul.nativebar</name>
        <value>true</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.borderlayout.animation.disabed</name>
        <value>true</value>
    </library-property>


    <!--  catch uncaught exceptions when AJAXING on a page -->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/zul/ZkError.zul</location>
    </error-page>

    <!--  if a user tries to carry on working when their session has timed out
   ask them what to do...
    -->
    <device-config>
        <device-type>ajax</device-type>
        <timeout-uri>/timeout.zul</timeout-uri>
    </device-config>

    <!--
    required to prevent getting 'not unique in idspace' errors when
    using spring web flow - not required otherwise
    -->

    <system-config>
        <id-generator-class>zk.extra.IdGeneratorImpl</id-generator-class>
    </system-config>

    <language-config>
        <addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
    </language-config>


    <library-property>
        <name>org.zkoss.zk.ui.macro.autowire.convention</name>
        <value>true</value>
    </library-property>

    <!-- in WEB-INF/zk.xml -->
    <library-property>
        <name>org.zkoss.zk.ui.composer.autowire.zscript</name>
        <value>true</value>
    </library-property>

    <!-- in WEB-INF/zk.xml -->
    <library-property>
        <name>org.zkoss.zk.ui.composer.autowire.xel</name>
        <value>true</value>
    </library-property>
</zk>